<div class="modal fade" id="editClient" role="dialog" aria-labelledby="addModalTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addModalTitle">Editar informacion del cliente.</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card-body">
                    <div class="form-group">
                        <label for="">Id</label>
                        <input disabled type="Name" id="edit_client_id" class="form-control client_id"
                            placeholder="Escribe la informacion con la que editara el dato." />
                    </div>
                    <div class="form-group">
                        <label for="">Nombre Completo</label>
                        <input type="text" id="edit_client_name" class="client_name form-control"
                            placeholder="Escribe la informacion con la que editara el dato." />
                    </div>
                    <div class="form-group">
                        <label for="">Dirección principal</label>
                        <input type="text" class="client_address form-control" id="edit_client_address"
                            placeholder="Escribe la informacion con la que editara el dato." />
                        <input type="text" class="client_phone none" id="edit_client_phone">
                    </div>
                    <div class="form-group">
                        <label for="">Zona</label>
                        <input type="text" class="client_zone form-control" id="edit_client_zone"
                            placeholder="Escribe la informacion con la que editara el dato." />
                    </div>
                    <div class="form-group">
                        <label for="">Ubicacion url</label>
                        <input type="text" class="client_location form-control" id="edit_client_location"
                            placeholder="Escribe la informacion con la que editara el dato." />
                    </div>
                    <div class="form-group">
                        <label for="">Direcciones extra</label>
                        <select id="extra-address-select-delete" class="form-control extra-address-select"
                            style="width: 100%;">
                            <optgroup label="Grupo 1">
                                <option value="opcion1">Opción 1</option>
                                <option value="opcion2">Opción 2</option>
                            </optgroup>
                            <optgroup label="Grupo 2">
                                <option value="opcion3">Opción 3</option>
                                <option value="opcion4">Opción 4</option>
                            </optgroup>
                        </select>
                        <% if(role=="admin" ){%>
                            <button style="margin-top: 10px;" onclick="deleteExtraAddress()"
                                class="btn btn-danger btn-xs">Eliminar</button>
                            <% } %>
                                <button style="margin-top: 10px;" onclick="$('#extra-add-client-div').show()"
                                    class="btn btn-primary btn-xs">Agregar</button>
                    </div>
                    <div id="extra-add-client-div" class="form-group">
                        <label for="">Dirección extra (Agregar)</label>
                        <input type="text" id="extra-add-client" class="form-control"
                            placeholder="Escribe la dirección que deseas agregar.">
                        <button style="margin-top: 10px;" onclick="addExtraAddress()"
                            class="btn btn-success btn-xs">Agregar</button>
                    </div>
                    <div class="form-group" bis_skin_checked="1">
                        <label>Observaciones</label>
                        <textarea id="edit_client_observation" class="form-control client_observations" rows="3"
                            placeholder="Escribe la informacion con la que editara el dato."></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    Cerrar
                </button>
                <button type="button" class="btn btn-primary" onclick="editClient()">Guardar cambios</button>
            </div>
        </div>
    </div>
</div>