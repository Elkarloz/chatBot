<%- include("template/header.ejs") %>
  <div class="content-wrapper">
    <div style="height: 85vh; padding-top: 10px; padding-bottom: 10px" class="container-fluid">
      <div class="div-center">
        <h1>Respuestas automáticas</h1>
      </div>
      <div class="div-center mt-3">
        <div class="col-12">
          <div class="card">

            <div class="card-body table-responsive p-0" style="height: 300px">
              <table class="table table-head-fixed text-nowrap table-hover table-bordered">
                <thead>
                  <tr>
                    <th>Id</th>
                    <th>Titulo</th>
                    <th>Respuesta</th>
                    <th style="text-align: center">Acciones</th>
                  </tr>
                </thead>
                <tbody id="tableBody">
                  <% resp.forEach(function(r) { %>
                    <tr>
                      <td id="dataId">
                        <%= r.ResId %>
                      </td>
                      <td id="dataName">
                        <%= r.ResTitle %>
                      </td>
                      <td id="dataPhone">
                        <%= r.ResResponse %>
                      </td>
                      <td style="width: 200px">
                        <div class="div-center">
                          <button type="button" class="btn btn-block btn-warning btn-sm mx-2" data-toggle="modal"
                            data-target="#editModal2"
                            onclick="editResponses('<%= r.ResId %>', '<%= r.ResTitle %>', '<%= r.ResResponse %>')">
                            Editar
                          </button>

                          <button type="button" class="btn btn-block btn-danger btn-sm mt-0"
                            onclick="deleteResponses('<%= r.ResId %>')">
                            Eliminar
                          </button>
                        </div>
                      </td>
                    </tr>
                    <% }); %>
                </tbody>
              </table>
            </div>
            <div class="div-center mb-5 mt-3">
              <button type="button" class="btn btn-success btn-block" style="width: 250px" data-toggle="modal"
                data-target="#addModal2">
                <i class="fa fa-plus-circle"></i>
                Agregar respuesta
              </button>
            </div>
            <div class="container-fluid">
              Manual de instrucción.<ul>
                <li>Las opciones disponibles para un registro son: {nombre}, {direccion}, {telefono}, {observaciones},
                  {link}.</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include("template/editModal2.ejs") %>
    <%- include("template/addModal2.ejs") %>
      <script src="/dist/js/btnActionResponses.dev.js"></script>
      <%- include("template/footer.ejs") %>