<section id="window_info" class="disable_window">
  <h1>Informacion del cliente</h1>
  <div class="container-fluid">
    <div class="form-group">
      <label for="CliName">Nombre</label>
      <input
        type="text"
        class="form-control form-control-sm"
        id="CliName"
        placeholder="Usuario"
        readonly
      />
    </div>
    <div class="form-group">
      <label for="CliName">Dirección</label>
      <input
        type="text"
        class="form-control form-control-sm"
        id="CliAddress"
        placeholder="Dirección"
        readonly
      />
    </div>
    <div class="form-group">
      <label for="CliObservation">Observaciones</label>
      <textarea
        id="CliObservation"
        readonly
        class="form-control form-control-sm no-resize text-area-custom"
        placeholder="Observaciones"
        cols="30"
        rows="10"
      ></textarea>
    </div>
    <button class="btn btn-sm btn-primary">Habilitar edición</button>
    <h1 class="title-delivery-option">Finalizar chat</h1>
    <div class="form-group">
      <select class="form-control form-control-sm">
        <option>Seleccione un repartidor</option>
      </select>
    </div>
    <button class="btn btn-sm btn-danger">Finalizar chat</button>
  </div>
</section>
