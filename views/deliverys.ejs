<!DOCTYPE html>
<html lang="en">
  <%- include("template/header.ejs") %>

  <body class="main-layout in_page">
    <!-- loader  -->
    <div class="loader_bg">
      <div class="loader"><img src="images/loading.gif" alt="#" /></div>
    </div>
    <!-- end loader -->
    <!-- header -->
    <%- include("template/navbar.ejs") %>
    <!-- end header inner -->
    <!-- end header -->
    <!--  service -->
    <div class="service" style="margin-bottom: 100px">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="titlepage">
              <h2>Reparti<span class="green">dores</span></h2>
            </div>
          </div>
        </div>

        <div class="col-md-12" style="max-height: 300px; overflow-y: auto">
